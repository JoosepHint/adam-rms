<style>
    body {
        font-size: {{ GET.numStickers == "8cable" ? '9' : '18' }}px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }

     table {
        width: 100%;
    }
    td {
        overflow-y:hidden;
        overflow-x:hidden;
        overflow: hidden;
    }
</style>
<body>
<!--tags: 1
typename: 0
mass: 0
instanceName
instancelogo: 0
adamrmslogo: 0-->
<table autosize="1" style="page-break-inside:avoid">
    {% if GET.numStickers == "8" %}
        {% for i in range(0,((assets|length)/4)|round(0, 'ceil')) %}
        <tr width="100%">
            <td width="50%" height="255px" style="padding-right: 5px;" >
                {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)],GET:GET} %}<br/>
                {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)+1],GET:GET} %}
            </td>
            <td width="50%" height="255px" style="padding-left: 5px;">
                {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)+2],GET:GET} %}<br/>
                {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)+3],GET:GET} %}
            </td>
        </tr>
        {% endfor %}
    {% elseif GET.numStickers == "8cable" %}
        {% for i in range(0,((assets|length)/4)|round(0, 'ceil')) %}
            <tr width="100%">
                <td width="25%" height="255px" style="padding-right: 2px;" >
                    {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)],GET:GET} %}
                </td>
                <td width="25%" height="255px" style="padding-right: 10px;" >
                    {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)+1],GET:GET} %}
                </td>
                <td width="25%" height="255px" style="padding-right: 2px;" >
                    {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)+2],GET:GET} %}<br/>
                </td>
                <td width="25%" height="255px">
                    {% include 'maintenance/individualBarcodePDF.twig' with {asset: assets[(i*4)+3],GET:GET} %}
                </td>
            </tr>
        {% endfor %}
    {% else %}
        Unknown format size
    {% endif %}
</table>
</body>