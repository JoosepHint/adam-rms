{% set THISWIDGET = WIDGETS.widget('inventoryMass', {'instanceid': USERDATA.instance.instances_id}) %}


<div class="card statsWidget" data-widgetname="inventoryMass">
    <div class="card-header border-0">
        <h3 class="card-title">Assets Total Mass</h3>
        <div class="card-tools">
            {% if WIDGETS.checkUser('inventoryMass') %}
                <button type="button" class="btn btn-sm btn-tool removeWidgetButton" data-card-widget="collapse" data-widgetname="inventoryMass" title="Remove from Dashboard">
                    <i class="fas fa-times"></i>
                </button>
            {% else %}
                <button type="button" class="btn btn-sm btn-tool addWidgetButton" data-widgetname="inventoryMass" title="Add to Dashboard">
                    <i class="fas fa-plus"></i>
                </button>
            {% endif %}
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <p class="text-success text-xl">
                <i class="ion ion-ios-refresh-empty"></i>
            </p>
            <p class="d-flex flex-column text-right">
                    <span class="font-weight-bold">
                      <i class="ion ion-android-arrow-up text-success"></i> {{ THISWIDGET.MASS|round(2, 'ceil')|number_format(2) }}kg
                    </span>
            </p>
        </div>
    </div>
</div>
